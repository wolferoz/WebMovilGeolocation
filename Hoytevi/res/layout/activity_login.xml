<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0F4DB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/txtIDUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPasword"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtPasword"
        android:layout_marginTop="99dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="ID Usuario"
        android:padding="15dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtPasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIDUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="15dp" />

    <Button
        android:id="@+id/btnInitSesion"
        android:background="@drawable/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPasword"
        android:layout_alignRight="@+id/txtPasword"
        android:layout_below="@+id/txtPasword"
        android:layout_marginTop="21dp"
        android:text="Iniciar Sesión" />

</RelativeLayout>