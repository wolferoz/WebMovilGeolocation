<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#D0F4DB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:stretchColumns="0">
	    <TableRow >

			<ImageView
			    android:id="@+id/imageView_pic"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:src="@drawable/ic_launcher" />

		</TableRow>
		<TableRow >
		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/by" />
		</TableRow>
		<TableRow >
		    <TextView
		        android:id="@+id/txtNombreArchivo"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"

		        android:layout_weight="1"
		        android:background="@drawable/txt_filename"
		        android:minWidth="200dp"
		        android:padding="15dp" />
		</TableRow>
		
		
		<TableRow >
		    <Button
		        android:id="@+id/btnBuscar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="21dp"
		        android:layout_weight="1"
		        android:background="@drawable/btn_buscar"
		        android:drawableLeft="@drawable/ic_action_folder_open"
		        android:padding="10dp"
		        android:text="@string/buscar"
		        android:textColor="@android:color/white" />
		</TableRow>
		
		<TableRow >
		    <Button
		        android:id="@+id/btnCam"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="19dp"
		        android:layout_weight="1"
		        android:background="@drawable/btn_cam"
		        android:drawableLeft="@drawable/ic_action_cam_open"
		        android:padding="10dp"
		        android:text="@string/cam"
		        android:textColor="@android:color/white" />
		</TableRow>
		
		<TableRow >
		    <Button
		        android:id="@+id/btnSubir"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="18dp"
		        android:layout_weight="1"
		        android:background="@drawable/btn_subir"
		        android:drawableLeft="@drawable/ic_action_upload_file"
		        android:padding="10dp"
		        android:text="@string/subir"
		        android:textColor="@android:color/white" />
		</TableRow>
		<TableRow >
			<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Titulo:"
		        android:layout_weight="1"
		        android:padding="10dp" />
		</TableRow>
		<TableRow >

			<EditText
			    android:id="@+id/txtMainEditTitulo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/edit_campo"
			    android:ellipsize="end"
			    android:ems="10"
			    android:maxLines="1"
			    android:singleLine="true" >

			</EditText>
		</TableRow>
		<TableRow >
			<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Categoria:"
		        android:layout_weight="1"
		        android:padding="10dp" />
		</TableRow>
		<TableRow >
			<EditText
			    android:id="@+id/txtMainEditCategoria"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ems="10"
				android:ellipsize="end"
				android:maxLines="1"
				android:singleLine="true"
			    android:background="@drawable/edit_campo"
			     >
			</EditText>
		</TableRow>
		<TableRow >
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Descripcion:"
		        android:layout_weight="1"
		        android:padding="10dp" />
		 </TableRow>
		 <TableRow >

		    <EditText
		        android:id="@+id/txtMainEditDescripcion"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:inputType="textMultiLine"
		        android:background="@drawable/edit_campo"
		         >
			</EditText>
		</TableRow>
	</TableLayout>
</ScrollView>